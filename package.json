{
  "name": "github-action-git-jira-changelog",
  "version": "1.0.0",
  "description": "This action generates a change log file from commit messages. Grouping Jira Commits, Conventional Commits, and summarizing minor changes",
  "main": "index.js",
  "repository": "git@github.com:Broadshield/github-action-git-jira-changelog.git",
  "author": "Jamie Nelson <jamie@wearsafe.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@actions/core": "^1.2.6",
    "actions-toolkit": "^4.0.0"
  },
  "devDependencies": {
    "@github/prettier-config": "^0.0.4",
    "@vercel/ncc": "^0.28.5",
    "@zeit/ncc": "^0.20.4",
    "commitizen": "^4.0.4",
    "eslint": "^5.13.0",
    "github-action-readme-generator": "^1.0.12",
    "husky": "^4.2.5",
    "jest": "^25.2.7",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "scripts": {
    "test": "NODE_ENV=testing jest",
    "build": "ncc build index.js",
    "format:fix": "prettier --write \"*.{md,json,yaml,yml,sh,js}\"",
    "format": "prettier --list-different \"{./,./**}/*.{ts,js,json,md}\"",
    "generate-docs": "github-action-readme-generator && prettier --write .ghadocs.json README.md && git add .ghadocs.json README.md"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/helpers/",
      "/node_modules/"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "*.{md,json,yaml,yml,sh,js}": "prettier --write"
  },
  "prettier": "@github/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged;yarn run build;git add dist"
    }
  }
}
